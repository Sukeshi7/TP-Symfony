{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Create a new article</h2>
        <div class="flex space-x-4 mb-6">
            <a href="{{ path('app_article_crud_new_manual') }}" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">Manually</a>
            <a href="{{ path('app_article_crud_new_ai') }}" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition">Via AI</a>
        </div>

        <h1 class="text-3xl font-bold mb-4">Article index</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
                <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 border">Id</th>
                    <th class="px-4 py-2 border">Title</th>
                    <th class="px-4 py-2 border">Content</th>
                    <th class="px-4 py-2 border">Creation Date</th>
                    <th class="px-4 py-2 border">Update Date</th>
                    <th class="px-4 py-2 border">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 border">{{ article.id }}</td>
                        <td class="px-4 py-2 border font-semibold">{{ article.title }}</td>
                        <td class="px-4 py-2 border max-w-xs truncate">{{ article.content|slice(0, 100) ~ '...' }}</td>
                        <td class="px-4 py-2 border">{{ article.creationDate ? article.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="px-4 py-2 border">{{ article.updateDate ? article.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="px-4 py-2 border">
                            <div class="flex space-x-2">
                                <a href="{{ path('app_article_crud_show', {'id': article.id}) }}" class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition whitespace-nowrap">Show</a>
                                <a href="{{ path('app_article_crud_edit', {'id': article.id}) }}" class="px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition whitespace-nowrap">Edit</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-4 py-2 text-center text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
