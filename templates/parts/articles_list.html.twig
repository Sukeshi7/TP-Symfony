<div class="my-4">
    <h2 class="text-lg font-bold mb-4">{{ title }}</h2>
    <div class="flex gap-4 overflow-x-auto">
        {% for article in articles %}
            <div class="article-card flex-shrink-0 w-64 border p-4">
                <h3 class="font-semibold text-blue-500 text-base">{{ article.title }}</h3>
                <p class="text-gray-600 text-sm">{{ article.content|slice(0, 100) }}...</p>
                <a href="{{ path('article', {'id': article.id}) }}" class="text-blue-700 text-sm underline mt-2 inline-block">Lire la suite</a>
            </div>
        {% else %}
            <p>Aucun article disponible.</p>
        {% endfor %}
    </div>
</div>
