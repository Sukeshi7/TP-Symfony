{% extends 'base.html.twig' %}

{% block title %}Administration - Langues{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-2xl font-bold mb-4">Gestion des langues</h1>

        <!-- Liste des langues -->
        <div class="mb-6">
            <h2 class="text-xl font-semibold mb-3">Liste des langues</h2>
            <table class="table-auto w-full border-collapse border border-gray-300">
                <thead>
                <tr>
                    <th class="border border-gray-300 px-4 py-2">ID</th>
                    <th class="border border-gray-300 px-4 py-2">Nom</th>
                    <th class="border border-gray-300 px-4 py-2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for language in languages %}
                    <tr>
                        <td class="border border-gray-300 px-4 py-2">{{ language.id }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ language.name }}</td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a href="#" class="text-blue-500 hover:underline">Modifier</a> |
                            <a href="#" class="text-red-500 hover:underline">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-gray-500 py-4">Aucune langue trouv√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Formulaire d'ajout -->
        <div>
            <h2 class="text-xl font-semibold mb-3">Ajouter une langue</h2>
            <form method="POST">
                <div class="mb-3">
                    <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                    <input type="text" id="name" name="name" class="form-input mt-1 block w-full" required>
                </div>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </form>
        </div>
    </div>
{% endblock %}
